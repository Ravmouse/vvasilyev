    </servlet>
    <servlet>
        <servlet-name>update</servlet-name>
        <servlet-class>ru.job4j.h5mvcjstl.UpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
